{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"module": "commonjs",
		"target": "es2024",
		"types": [],
		"sourceMap": true,
		"declaration": true,
		"experimentalDecorators": true,
		"declarationMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"baseUrl": "./src",
		"paths": {
			"@di/*": ["./di/*"],
			"@app/*": ["./app/*"],
			"@domain/*": ["./domain/*"],
			"@config/*": ["./config/*"],
			"@discord/*": ["./discord/*"],
			"@persistence/*": ["./persistence/*"]
		}
	}
}
